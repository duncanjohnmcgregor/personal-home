# Database URLs (PostgreSQL)
# For Vercel Postgres or Neon
POSTGRES_URL="postgresql://user:password@host:5432/database?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Spotify OAuth Configuration
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"

# Beatport API Configuration
# Note: Beatport API v4 requires authentication
# Visit https://api.beatport.com/v4/docs/ for more information
BEATPORT_API_TOKEN="your-beatport-api-token"

# SoundCloud API Configuration (Future Implementation)
# SOUNDCLOUD_CLIENT_ID="your-soundcloud-client-id"
# SOUNDCLOUD_CLIENT_SECRET="your-soundcloud-client-secret"

# Application Configuration
NODE_ENV="development"

# Optional: For production deployments
# VERCEL_URL="your-production-url"

# Monitoring and Analytics (Optional)
# SENTRY_DSN="your-sentry-dsn"
# VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

